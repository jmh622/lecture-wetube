doctype html 
html(lang='ko')
    head
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
        title #{pageTitle} | Wetube
    body
        header 
            h1=pageTitle
            nav 
                ul 
                    li 
                        a(href="/") Home
                    li 
                        a(href="/videos/upload") Upload Video
                    li 
                        a(href="/search") Search Video
                    if !loggedIn
                        li
                            a(href="/join") Join
                        li
                            a(href="/login") Login
                    else
                        li
                            a(href="/logout") Logout
                        li hello, #{loggedInUser.name}
        main 
            block content
    include partials/footer